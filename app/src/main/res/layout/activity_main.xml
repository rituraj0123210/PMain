<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:background="@color/homepage">


    <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                   >


                    <ImageView
                        android:id="@+id/setting_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/setting_ic" />


                    <TextView
                        android:id="@+id/wish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome"
                        android:layout_gravity="end"
                        android:layout_marginEnd="30dp"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="54dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/slider_bg"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="@integer/material_motion_duration_short_1"
                    app:iss_delay="1000"
                    app:iss_period="4000"
                    app:iss_text_align="CENTER"
                    app:iss_error_image="@color/teal_200"
                    app:iss_title_background="@color/transparent" />

                    <ImageView
                        android:id="@+id/noInternetText"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="@string/loading_check_your_internet_connection"
                        android:textStyle="bold"
                        android:layout_margin="16dp"
                        android:background="@drawable/slider_bg"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:src="@drawable/home11"
                        android:layout_gravity="center" />


                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:elevation="80dp">

                    <RelativeLayout
                        android:id="@+id/awas_yojna"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/gradient_1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onCardClick">

                        <TextView
                            android:id="@+id/hello1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="प्रधानमंत्री आवास योजना"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="@color/black"

                            android:id="@+id/hello2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="PM Awas Yojna"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="106dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/farmer_mobile2" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:elevation="80dp"
                  >

                    <RelativeLayout
                        android:id="@+id/card2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/click_eff2"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onCardClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Kisan Samman Nidhi"
                            android:textColor="@color/black"

                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"

                            android:text="e-KYC | Registraion"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="98dp"
                        android:src="@drawable/farmer_money"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:elevation="80dp">

                    <RelativeLayout
                        android:id="@+id/cardd3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/gradient_4"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onCardClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="UP भुलेख"
                            android:textColor="@color/black"

                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"

                            android:text="नाम से ज़मीन देखें"
                            android:textSize="27sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="98dp"
                        android:src="@drawable/farm11"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

